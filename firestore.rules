rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for the 'publicaciones' collection
    match /publicaciones/{publicacionId} {
      // Anyone can read blog posts
      allow read: if true;
      // Only authenticated users can create, update, or delete posts
      allow write: if request.auth != null;
    }

    // Rules for the 'contactos' collection
    match /contactos/{contactoId} {
      // Anyone can submit a contact form
      allow create: if true;
      // Only authenticated users can read or delete contact messages
      allow read, delete: if request.auth != null;
    }
  }
}
